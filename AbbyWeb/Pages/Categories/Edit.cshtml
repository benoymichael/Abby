@page
@model AbbyWeb.Pages.Categories.EditModel
@{
}

<form method="post">
 @*   Benoy- following hidden filed is required to keep the id of the edited record. if we remove Id will go as 0 to the edit save *@
    <input hidden asp-for="Category.id" />
    <div class="border p-3 mt-4">

    <div class="row pt-2">
         <h2 class="text-primary">Edit Category</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"> </div>
        <div class="mb-3">
        <label asp-for="@Model.Category.Name"></label>    
        <input asp-for="@Model.Category.Name" class="form-control" />
        <span asp-validation-for="@Model.Category.Name" class="text-danger"></span>

        </div>
         <div class="mb-3">
        <label asp-for="@Model.Category.DisplayOrder"></label>    
        <input asp-for="@Model.Category.DisplayOrder" class="form-control" />
        <span asp-validation-for="@Model.Category.DisplayOrder" class="text-danger"></span>

        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
    <a asp-page="index" class="btn btn-secondary" style="width:150px" >Back to List</a>
    </div>
    
</form>

